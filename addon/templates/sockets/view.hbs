<Layout::Section::Header @title={{@model.name}}>
    <Button @icon="long-arrow-left" @iconPrefix="fas" @text="Back" @onClick={{fn this.goBack}} />
</Layout::Section::Header>

<Layout::Section::Body>
    <div class="h-screen overflow-y-scroll pb-40">
        <div class="space-y-6 py-6 max-w-6xl mx-auto">
            <ContentPanel @titleStatusRight="Channel" @titleStatusRightClass="info-status-badge" @hideStatusDot={{true}} @title={{@model.name}} @open={{true}} @pad={{false}} @panelBodyClass="bg-gray-800">
                <div id="output" class="font-mono rounded-b-md max-h-full p-6 overflow-y-scroll bg-gray-900 shadow-inner dark:shadow-none dark:bg-gray-800">
                    <div class="flex items-center justify-between">
                        <div class="block w-1/2 mb-2 font-mono font-semibold text-green-300">
                            Output
                        </div>
                        {{#if this.events.length}}
                            <div class="flex items-center justify-end w-1/2 text-sm text-green-300">
                                <Spinner @iconClass="green-loader" />

                                <span class="ml-2">
                                    Awaiting events...
                                </span>
                            </div>
                        {{/if}}
                    </div>

                    <div>
                        {{#each this.events as |event|}}
                            <div class="mb-3">
                                <div class="text-green-300">
                                    {{event.time}}
                                </div>
                                <div class="font-mono p-3 mb-3 text-green-300">
                                    {{event.content}}
                                </div>
                            </div>
                        {{else}}
                            <div class="flex items-center my-6 text-green-300">
                                <Spinner @iconClass="green-loader" />
                                <span class="ml-2">
                                    Awaiting events...
                                </span>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </ContentPanel>
        </div>
    </div>
</Layout::Section::Body>